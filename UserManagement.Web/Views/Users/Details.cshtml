@model UserManagement.Web.Models.Users.UserDetailsViewModel

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

<div class="card p-3 shadow-sm">
    <partial name="DetailsFields" model="Model" />

    <h4>Audit Log</h4>

    @if (Model.Logs.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Timestamp</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.Action</td>
                        <td>@log.Timestamp.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")</td>
                        <td>
                            <a asp-action="LogDetails" asp-route-id="@log.Id" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No audit logs found for this user.</p>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="List" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>




