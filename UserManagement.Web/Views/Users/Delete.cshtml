@model UserManagement.Web.Models.Users.UserDetailsViewModel

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>

<div class="card p-3 shadow-sm">
    <p>Are you sure you want to delete this user?</p>

    <partial name="DetailsFields" model="Model" />
    
    <div class="mt-3">
        <form asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-primary">Yes, Delete</button>
            <a asp-action="List" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>




